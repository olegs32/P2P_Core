# P2P Admin System Environment Configuration
# Copy this file to .env and adjust the values

# === Node Configuration ===
NODE_HOST=0.0.0.0
NODE_PORT=8000
DHT_PORT=5678
NODE_NAME=

# Bootstrap nodes (comma-separated list of host:port)
# Example: 192.168.1.100:5678,192.168.1.101:5678
BOOTSTRAP_NODES=

# === Security ===
AUTH_SECRET=your-secret-key-change-in-production
TOKEN_EXPIRE_MINUTES=60
SSL_CERT=
SSL_KEY=

# === API Configuration ===
API_PREFIX=/api/v1
CORS_ORIGINS=*

# === WebSocket Configuration ===
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=60

# === Task Queue Configuration ===
TASK_QUEUE_SIZE=1000
TASK_TIMEOUT=300
MAX_CONCURRENT_TASKS=10

# === DHT Configuration ===
DHT_REPLICATION_FACTOR=3
DHT_LOOKUP_TIMEOUT=10
DHT_STORE_TIMEOUT=10

# === P2P Network Configuration ===
PEER_DISCOVERY_INTERVAL=30
PEER_HEALTH_CHECK_INTERVAL=60
PEER_TIMEOUT=120
MAX_PEERS=100

# === Service Configuration ===
SERVICE_REGISTRY_TTL=300
SERVICE_HEALTH_CHECK_INTERVAL=30

# === Monitoring Configuration ===
METRICS_ENABLED=true
METRICS_INTERVAL=60

# === Logging Configuration ===
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/p2p_node.log
LOG_ROTATION=1 day
LOG_RETENTION=7 days

# === Storage Configuration ===
DATA_DIR=./data
CACHE_DIR=./cache
TEMP_DIR=./temp

# === Performance Configuration ===
WORKER_THREADS=4
CONNECTION_POOL_SIZE=100
REQUEST_TIMEOUT=30
WORKERS=1

# === Debug Configuration ===
DEBUG=false
PROFILE_ENABLED=false
RELOAD=false

# === Admin Interface Configuration ===
# Used by Streamlit admin interface
API_URL=http://localhost:8000
API_TOKEN=
PAGE_TITLE=P2P Admin System
PAGE_ICON=üåê
LAYOUT=wide
STATUS_UPDATE_INTERVAL=5
METRICS_UPDATE_INTERVAL=10
LOGS_UPDATE_INTERVAL=3
MAX_LOG_LINES=1000
MAX_TASKS_DISPLAY=100
CHART_HISTORY_MINUTES=60
THEME=dark
PRIMARY_COLOR=#1f77b4

# === Service Specific Configuration ===

# Process Manager
PROCESS_MONITOR_INTERVAL=5
PROCESS_RESTART_DELAY=10
MAX_RESTART_ATTEMPTS=3

# File Manager
FILE_WATCH_INTERVAL=1
MAX_FILE_SIZE=104857600  # 100MB
ALLOWED_FILE_OPERATIONS=read,write,delete,move,copy

# Network Manager
NETWORK_SCAN_INTERVAL=60
PORT_SCAN_TIMEOUT=1

# System Monitor
SYSTEM_METRICS_INTERVAL=5
DISK_USAGE_THRESHOLD=90.0
MEMORY_USAGE_THRESHOLD=85.0
CPU_USAGE_THRESHOLD=80.0

# === Redis Configuration (Optional) ===
# Used for distributed task queue
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# === Database Configuration (Optional) ===
# For future persistent storage
DATABASE_URL=sqlite:///./data/p2p_admin.db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# === External Services (Optional) ===
# For notifications, metrics export, etc.
PROMETHEUS_ENDPOINT=
GRAFANA_ENDPOINT=
SLACK_WEBHOOK_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=
EMAIL_SMTP_PASSWORD=
EMAIL_FROM=noreply@p2p-admin.local
EMAIL_TO=admin@p2p-admin.local